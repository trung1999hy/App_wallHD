<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/image" android:layout_width="fill_parent" android:layout_height="fill_parent"
               android:scaleType="fitXY" android:contentDescription="@string/app_name"/>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/progressBar" android:layout_width="fill_parent"
                                           android:layout_height="fill_parent" android:layout_centerInParent="true"
                                           app:lottie_autoPlay="true" app:lottie_fileName="animation/loading_image.json"
                                           app:lottie_loop="true"/>
</RelativeLayout>